<div class="logo_branding col-md-10 col-md-offset-1">

    <h1><a class="logo_link" href="{{ url('index') }}">{#<img src='{{ asset('images/sport-entre-amis.png') }}' width="200px"/>#}Sport entre amis</a></h1>
    <h1 class="logo_title">Reservez un terrain de sport en toute simplicité parmis 800 établissement référencés</h1>

</div>

<form class="form-horizontal  col-md-10 col-md-offset-1" method="GET" action="{{ url('search') }}">

    <div class="form-group">
        <div class="input-group">

            <span class="input-group-addon" id="sizing-addon1"><i class="fas fa-search"></i></span>
            <input type="text" class="form-control" placeholder="ex : Calvados" name="department" value="{% if department is defined %}{{ department }}{% endif %}" required autofocus>
            <span class="input-group-btn">
                <button class="btn btn-primary" type="submit">Rechercher</button>
            </span>
        </div>
    </div>
    {% if sports is defined %}
        <div class="form-check">
            {% for sport in sports %}
                <div>
                    <label class="form-check-label" for="{{ sport }}">{{ sport }}</label>
                    <input type="checkbox" name="sport[]" class="form-check-input" value="{{ sport }}" {% if sportsSelected is defined and sport in sportsSelected %} ckecked {% endif %}>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</form>