{% extends 'layout/layout.twig' %}

{% block content %}
    {{ parent() }}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">

                    <div class="panel-body">

                            <div class="logo_branding col-md-10 col-md-offset-1">
                                <h1><a class="logo_link" href="{{ url('index') }}">Sport entre amis</a></h1>
                                <h1 class="logo_title">Reservez un terrain de sport en toute simplicité parmis 800 établissement référencés</h1>
                            </div>

                            <form class="form-horizontal  col-md-10 col-md-offset-1" method="GET" action="#">
                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon" id="sizing-addon1"><i class="fas fa-search"></i></span>
                                        <input type="text" class="form-control" placeholder="ex : Calvados" name="department" value="{% if department is defined %}{{ department }}{% endif %}" required autofocus>
                                        <span class="input-group-btn">
                                            <button class="btn btn-primary" type="button">Rechercher</button>
                                        </span>
                                    </div>
                                </div>
                            </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}