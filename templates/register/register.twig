{% extends 'layout/layout.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">Inscription</div>

                <div class="panel-body">
                    <form class="form-horizontal" method="POST" action="#" name="user">

                        {{ form_row(form._token) }}

                        <div class="form-group{% if form_errors(form.firstName) %}has-error{% endif %}">
                            <div class="col-md-4 control-label">
                                {{ form_label(form.firstName) }}
                            </div>

                            <div class="col-md-6">
                                {{ form_widget(form.firstName) }}

                                {% if form_errors(form.firstName) %}
                                    <span class="help-block">
                                            <strong>{{ form_errors(form.firstName) }}</strong>
                                        </span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-group{% if form_errors(form.lastName) %}has-error{% endif %}">
                            <div class="col-md-4 control-label">
                                {{ form_label(form.lastName) }}
                            </div>

                            <div class="col-md-6">
                                {{ form_widget(form.lastName) }}

                                {% if form_errors(form.lastName) %}
                                    <span class="help-block">
                                            <strong>{{ form_errors(form.lastName) }}</strong>
                                        </span>
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-group{% if form_errors(form.email) %}has-error{% endif %}">
                            <div class="col-md-4 control-label">
                                {{ form_label(form.email) }}
                            </div>

                            <div class="col-md-6">
                                {{ form_widget(form.email) }}

                                {% if form_errors(form.email) %}
                                    <span class="help-block">
                                            <strong>{{ form_errors(form.email) }}</strong>
                                        </span>
                                {% endif %}
                            </div>
                        </div>

                        {% for passwordFiled in form.password %}
                            <div class="form-group{% if form_errors(passwordFiled) %}has-error{% endif %}">
                                <div class="col-md-4 control-label">
                                    {{ form_label(passwordFiled) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_widget(passwordFiled) }}

                                    {% if form_errors(passwordFiled) %}
                                        <span class="help-block">
                                            <strong>{{ form_errors(passwordFiled) }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}

                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-10">
                                {{ form_widget(form.submit) }}
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
