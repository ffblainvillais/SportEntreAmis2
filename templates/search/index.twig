{% extends 'layout/layout.twig' %}

{% block content %}
    {{ parent() }}

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {% include 'application/commons/search-form.twig' with {'sports' : sports} %}
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        {% if results is not empty %}

                            <div class="search-results">

                                {% for result in results %}

                                    {% set establishment                = result.establishment %}
                                    {% set establishementOpeningHours   = result.establishementOpeningHours %}
                                    {% set sportsAvailable              = result.sportsAvailable %}

                                    <div class="col-sm-6 col-md-4">
                                        <div class="thumbnail">
                                            <div class="caption">

                                                {% include 'user/commons/establishment-information.twig' with {
                                                    'searchPage'                    : 1,
                                                    'userEstablishment'             : establishment,
                                                    'establishementOpeningHours'    : establishementOpeningHours,
                                                } %}

                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>


                        {% else %}

                            <div class="centered">
                                <h2>Je n’ai rien trouvé pour votre recherche</h2>
                                <p>
                                    Mais pas de panique,<br/>
                                    réessayez en précisant ou reformulant votre recherche.
                                </p>
                            </div>

                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}