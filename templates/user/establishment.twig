{% extends 'layout/layout.twig' %}

{% block content %}
    {{ parent() }}

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <h4><a href="{{ url('user') }}"><i class="fas fa-chevron-left"></i> Espace utilisateur</a></h4>

                <div class="panel panel-info">
                    <div class="panel panel-heading"> Information Ã©tablissement </div>
                    <div class="panel-body">
                        <form class="form-horizontal" method="POST" action="#" name="establishement">

                            {{ form_row(form._token) }}

                            <div class="form-group{% if form_errors(form.name) %}has-error{% endif %}">
                                <div class="col-md-4 control-label">
                                    {{ form_label(form.name) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_widget(form.name) }}

                                    {% if form_errors(form.name) %}
                                        <span class="help-block">
                                            <strong>{{ form_errors(form.name) }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group{% if form_errors(form.address) %}has-error{% endif %}">
                                <div class="col-md-4 control-label">
                                    {{ form_label(form.address) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_widget(form.address) }}

                                    {% if form_errors(form.address) %}
                                        <span class="help-block">
                                            <strong>{{ form_errors(form.address) }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group{% if form_errors(form.postalcode) %}has-error{% endif %}">
                                <div class="col-md-4 control-label">
                                    {{ form_label(form.postalcode) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_widget(form.postalcode) }}

                                    {% if form_errors(form.postalcode) %}
                                        <span class="help-block">
                                            <strong>{{ form_errors(form.postalcode) }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group{% if form_errors(form.city) %}has-error{% endif %}">
                                <div class="col-md-4 control-label">
                                    {{ form_label(form.city) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_widget(form.city) }}

                                    {% if form_errors(form.city) %}
                                        <span class="help-block">
                                            <strong>{{ form_errors(form.city) }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group{% if form_errors(form.phone) %}has-error{% endif %}">
                                <div class="col-md-4 control-label">
                                    {{ form_label(form.phone) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_widget(form.phone) }}

                                    {% if form_errors(form.phone) %}
                                        <span class="help-block">
                                            <strong>{{ form_errors(form.phone) }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group{% if form_errors(form.openingHours) %}has-error{% endif %}">
                                <div class="col-md-4 control-label">
                                    {{ form_label(form.openingHours) }}
                                </div>

                                <div class="col-md-6">
                                    {{ form_widget(form.openingHours) }}

                                    {% if form_errors(form.openingHours) %}
                                        <span class="help-block">
                                            <strong>{{ form_errors(form.openingHours) }}</strong>
                                        </span>
                                    {% endif %}
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-10">
                                    {{ form_widget(form.submit) }}
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}